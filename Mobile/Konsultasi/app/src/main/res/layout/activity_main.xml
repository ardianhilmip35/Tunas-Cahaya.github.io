<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple">

        <ImageButton
            android:id="@+id/backto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector"
            android:background="@color/purple"
            android:layout_gravity="center"
            android:layout_marginLeft="34dp">

        </ImageButton>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="KONSULTASI"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/purple"
        android:textAlignment="center"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Jika anda ingin melakukan pemesanan jasa konstruktor,
 anda bisa menghubungi nomor di bawah ini! "
    android:fontFamily="@font/serifregular"
    android:textColor="@color/black"
    android:textAlignment="center"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"/>

<LinearLayout
    android:clickable="true"
    android:layout_width="250dp"
    android:layout_height="50dp"
    android:layout_marginTop="20dp"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:background="@drawable/corner"
    android:padding="5dp"
    android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/wa"/>

        <Button
            android:id="@+id/btn"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:fontFamily="@font/serifbold"
            android:layout_gravity="center"
            android:backgroundTint="@color/purple"/>


</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atau"
        android:textStyle="bold"
        android:fontFamily="@font/serifbold"
        android:textColor="@color/purple"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="Anda bisa mengunjungi alamat perusahaan di bawah ini :"
        android:textColor="@color/black"
        android:fontFamily="@font/serifregular"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/border">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/serifregular"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Jl. Slamet Riyadi RT. 004 RW. 011 Perum Bumi Central Permai Blok C-27 Kel. Baratan Kec. Patrang kabupaten Kab. Jember."
            android:textSize="15dp"
            android:textColor="@color/black"/>

    </LinearLayout>

    </LinearLayout>

