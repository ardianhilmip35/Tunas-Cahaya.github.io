<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fitur.AkunActivity">

    <!--Awal Button Kembali-->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blue1">

        <ImageButton
            android:id="@+id/btnkembali"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:background="@color/blue1"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingEnd="80dp"
            android:src="@drawable/ic_kembali" />

        <TextView
            android:id="@+id/txtkembali"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:paddingTop="4dp"
            android:text="Kembali"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>
    <!--Akhir Button Kembali-->


    <!--Awal LinearLayout Profil-->
    <LinearLayout
        android:id="@+id/halprofil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:background="@color/blue1">

        <ImageView
            android:id="@+id/profil"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginVertical="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_profil" />

        <TextView
            android:id="@+id/etNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="7dp"
            android:fontFamily="@font/poppins"
            android:text="Nama Lengkap"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />


        <!--Awal RelativeLayout Edit-->
        <RelativeLayout
            android:id="@+id/editakun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txteditakun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="35dp"
                android:fontFamily="@font/poppins"
                android:text="EDIT"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:textStyle="bold" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:background="@color/blue1"
                android:src="@drawable/ic_edit" />
        </RelativeLayout>
        <!--Akhir RelativeLayout Edit-->
    </LinearLayout>
    <!--Akhir LinearLayout Profil-->

    <!--Awal TextView Email-->
    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/halprofil"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEmail"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/bg_editakun"
        android:fontFamily="@font/ptserif"
        android:minHeight="48dp"
        android:paddingStart="15dp"
        android:textColor="@color/white"
        android:textSize="18dp" />
    <!--Akhir TextView Email-->


    <!--Awal TextView Nomer Telepon-->
    <TextView
        android:id="@+id/txtNohp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEmail"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins"
        android:text="Nomer Telepon"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/etNohp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNohp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/bg_editakun"
        android:fontFamily="@font/ptserif"
        android:minHeight="48dp"
        android:paddingStart="15dp"
        android:textColor="@color/white"
        android:textSize="18dp" />
    <!--Akhir TextView Nomer Telepon-->


    <!--Awal TextView Alamat-->
    <TextView
        android:id="@+id/txtAlamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etNohp"
        android:fontFamily="@font/poppins"
        android:text="Alamat Lengkap"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/etAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAlamat"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/bg_editakun"
        android:fontFamily="@font/ptserif"
        android:justificationMode="inter_word"
        android:paddingHorizontal="15dp"
        android:textColor="@color/white"
        android:textSize="18dp" />
    <!--Akhir TextView Alamat-->


    <!-- Awal Button Keluar -->
    <Button
        android:id="@+id/btnkeluar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etAlamat"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bg_editakun"
        android:fontFamily="@font/poppins"
        android:onClick="onClick"
        android:paddingHorizontal="60dp"
        android:text="KELUAR"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textStyle="bold" />
    <!-- Akhir Button Keluar -->



</RelativeLayout>