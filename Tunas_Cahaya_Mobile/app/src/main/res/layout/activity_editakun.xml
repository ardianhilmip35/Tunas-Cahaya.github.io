    <!--Awal TextView Password-->
    <TextView
        android:id="@+id/txtAlamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/etNohp"
        android:fontFamily="@font/poppins"
        android:text="Alamat"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        android:textSize="15dp"/>
    <!--Akhir TextView Password-->


    <!--Awal EditText Password-->
    <EditText
        android:id="@+id/etAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAlamat"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/bg_editakun"
        android:fontFamily="@font/ptserif"
        android:inputType="textPostalAddress"
        android:minHeight="48dp"
        android:paddingStart="15dp"
        android:textColor="@color/white"
        android:textSize="18dp" />
    <!--Akhir EditText Password-->


    <!--Awal Button Edit Password-->
    <Button
        android:id="@+id/btnpassword"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnedit"
        android:layout_centerInParent="true"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bg_editakun"
        android:fontFamily="@font/poppins"
        android:text="EDIT PASSWORD"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textStyle="bold" />

